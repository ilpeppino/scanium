{
  "name": "scanium-backend",
  "version": "1.0.0",
  "description": "Production-grade backend for Scanium - eBay marketplace integration and API",
  "main": "dist/main.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "postbuild": "mkdir -p dist/modules/classifier/domain && cp src/modules/classifier/domain/*.json dist/modules/classifier/domain/ || true",
    "start": "node dist/main.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "scanium",
    "ebay",
    "marketplace",
    "fastify",
    "typescript"
  ],
  "author": "Scanium Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/multipart": "^7.7.3",
    "@fastify/rate-limit": "^8.1.1",
    "@google-cloud/vision": "^4.3.3",
    "@prisma/client": "^5.19.0",
    "docker-compose": "^1.3.0",
    "fastify": "^4.28.1",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "sharp": "^0.33.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.15",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "form-data": "^4.0.0",
    "prettier": "^3.3.3",
    "prisma": "^5.19.0",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
