{
  "name": "scanium-backend",
  "version": "1.0.0",
  "description": "Production-grade backend for Scanium - eBay marketplace integration and API",
  "main": "dist/main.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "postbuild": "mkdir -p dist/modules/classifier/domain && cp src/modules/classifier/domain/*.json dist/modules/classifier/domain/ || true",
    "start": "node dist/main.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "test": "npx vitest run",
    "test:watch": "npx vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "scanium",
    "ebay",
    "marketplace",
    "fastify",
    "typescript"
  ],
  "author": "Scanium Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/multipart": "^9.3.0",
    "@fastify/rate-limit": "^10.3.0",
    "@google-cloud/vision": "^4.3.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.56.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.56.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.56.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.56.0",
    "@opentelemetry/instrumentation": "^0.56.0",
    "@opentelemetry/instrumentation-fastify": "^0.42.0",
    "@opentelemetry/instrumentation-http": "^0.56.0",
    "@opentelemetry/resources": "^1.29.0",
    "@opentelemetry/sdk-logs": "^0.56.0",
    "@opentelemetry/sdk-metrics": "^1.29.0",
    "@opentelemetry/sdk-node": "^0.56.0",
    "@opentelemetry/sdk-trace-node": "^1.29.0",
    "@opentelemetry/semantic-conventions": "^1.29.0",
    "@prisma/client": "^5.19.0",
    "docker-compose": "^1.3.0",
    "fastify": "^5.6.2",
    "google-auth-library": "^10.5.0",
    "openai": "^4.77.0",
    "pino": "^9.3.2",
    "pino-opentelemetry-transport": "^2.0.0",
    "pino-pretty": "^11.2.2",
    "prom-client": "^15.1.3",
    "sharp": "^0.33.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.15",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^8.57.0",
    "form-data": "^4.0.0",
    "prettier": "^3.3.3",
    "prisma": "^5.19.0",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
