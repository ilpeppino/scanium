[*.{kt,kts}]
# ktlint configuration for Scanium project
# Supports PascalCase for Composables and allowed wildcard imports

# Standard ktlint rules
indent_size = 4
max_line_length = 140

# Custom rules
# Disable wildcard import check as they are used extensively in tests and UI
ij_kotlin_imports_layout = *, java.**, javax.**, kotlin.**, ^
no-wildcard-imports = disabled

# Disable function naming check for Composables (PascalCase)
# Try multiple possible property names for compatibility
ktlint_function_naming_ignore_when_annotated_with = Composable
ktlint_standard_function-naming_ignore-when-annotated-with = Composable
function_naming_ignore_when_annotated_with = Composable