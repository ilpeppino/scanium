{
  "uid": "scanium-app-health",
  "title": "Scanium - App Health",
  "description": "Application health monitoring: errors, crashes, and telemetry status",
  "tags": ["scanium", "health", "errors"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "platform",
        "label": "Platform",
        "type": "custom",
        "query": "android,ios",
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "options": [
          { "text": "All", "value": "$__all", "selected": true },
          { "text": "android", "value": "android", "selected": false },
          { "text": "ios", "value": "ios", "selected": false }
        ],
        "includeAll": true,
        "multi": true
      },
      {
        "name": "env",
        "label": "Environment",
        "type": "custom",
        "query": "dev,staging,prod",
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "options": [
          { "text": "All", "value": "$__all", "selected": true },
          { "text": "dev", "value": "dev", "selected": false },
          { "text": "staging", "value": "staging", "selected": false },
          { "text": "prod", "value": "prod", "selected": false }
        ],
        "includeAll": true,
        "multi": true
      },
      {
        "name": "app_version",
        "label": "App Version",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({source=\"scanium-mobile\"}, app_version)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": {
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Error Events Rate",
      "description": "Rate of error events (event_name matching error.*)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (event_name) (count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=~\"error\\\\..*\" [5m]))",
          "legendFormat": "{{event_name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "pointSize": 5,
            "showPoints": "auto"
          },
          "unit": "short"
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "id": 2,
      "title": "Top Error Events (Last 1h)",
      "description": "Most frequent error events",
      "type": "table",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, sum by (event_name, error_type) (count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=~\"error\\\\..*\" [$__range])))",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "labelsToFields",
          "options": { "mode": "columns" }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "align": "left" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Value" },
            "properties": [{ "id": "displayName", "value": "Count" }]
          }
        ]
      }
    },
    {
      "id": 3,
      "title": "Telemetry Status (Last 15m)",
      "description": "Total events in last 15 minutes - detects telemetry drop",
      "type": "stat",
      "gridPos": { "x": 0, "y": 8, "w": 6, "h": 4 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} [15m]))",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "green", "value": 10 }
            ]
          },
          "unit": "short",
          "noValue": "No Data"
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 4,
      "title": "Error Rate Trend",
      "description": "Error events percentage of total events",
      "type": "stat",
      "gridPos": { "x": 6, "y": 8, "w": 6, "h": 4 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=~\"error\\\\..*\" [1h])) / sum(count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} [1h])) * 100",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          },
          "unit": "percent",
          "noValue": "0%"
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background"
      }
    },
    {
      "id": 5,
      "title": "Inference Failures",
      "description": "ML inference failure events",
      "type": "stat",
      "gridPos": { "x": 12, "y": 8, "w": 6, "h": 4 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=\"error.inference_failed\" [1h]))",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 10 }
            ]
          },
          "unit": "short",
          "noValue": "0"
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background"
      }
    },
    {
      "id": 6,
      "title": "Events by Severity",
      "description": "Distribution of events by severity level",
      "type": "piechart",
      "gridPos": { "x": 18, "y": 8, "w": 6, "h": 4 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (severity) (count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json [1h]))",
          "instant": true,
          "legendFormat": "{{severity}}"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "pieType": "donut"
      }
    },
    {
      "id": 7,
      "title": "Recent Error Logs",
      "description": "Latest error event logs",
      "type": "logs",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "{source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=~\"error\\\\..*\""
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    }
  ],
  "annotations": {
    "list": []
  }
}
