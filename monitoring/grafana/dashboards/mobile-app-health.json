{
  "uid": "scanium-mobile-app-health",
  "title": "Scanium - Mobile App Health",
  "description": "Mobile app functional correctness and usage funnel (requires mobile OTLP events)",
  "tags": ["scanium", "mobile", "health", "app"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "platform",
        "label": "Platform",
        "type": "custom",
        "query": "android,ios",
        "current": { "text": "All", "value": "$__all" },
        "options": [
          { "text": "All", "value": "$__all", "selected": true },
          { "text": "android", "value": "android", "selected": false },
          { "text": "ios", "value": "ios", "selected": false }
        ],
        "includeAll": true,
        "multi": true
      },
      {
        "name": "env",
        "label": "Environment",
        "type": "custom",
        "query": "dev,stage,prod",
        "current": { "text": "All", "value": "$__all" },
        "options": [
          { "text": "All", "value": "$__all", "selected": true },
          { "text": "dev", "value": "dev", "selected": false },
          { "text": "stage", "value": "stage", "selected": false },
          { "text": "prod", "value": "prod", "selected": false }
        ],
        "includeAll": true,
        "multi": true
      },
      {
        "name": "app_version",
        "label": "App Version",
        "type": "query",
        "datasource": { "type": "loki", "uid": "LOKI" },
        "query": "label_values({source=\"scanium-mobile\"}, app_version)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": "$__all" }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Mobile Telemetry Status",
      "type": "text",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 3 },
      "options": {
        "mode": "markdown",
        "content": "**No data until mobile OTLP events are shipped.** This dashboard depends on Loki logs from `source=\"scanium-mobile\"` with `event_name`, `platform`, and `app_version` labels."
      }
    },
    {
      "id": 2,
      "title": "Scan Funnel (Started -> Created -> Confirmed)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 3, "w": 12, "h": 8 },
      "datasource": { "type": "loki", "uid": "LOKI" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=\"scan.session_started\" [5m]))",
          "legendFormat": "Session Started"
        },
        {
          "refId": "B",
          "expr": "sum(count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=\"scan.candidate_created\" [5m]))",
          "legendFormat": "Candidate Created"
        },
        {
          "refId": "C",
          "expr": "sum(count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=\"scan.candidate_confirmed\" [5m]))",
          "legendFormat": "Candidate Confirmed"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "fillOpacity": 10, "drawStyle": "bars" }
        }
      }
    },
    {
      "id": 3,
      "title": "Confirmation Ratio (Confirmed / Created)",
      "type": "stat",
      "gridPos": { "x": 12, "y": 3, "w": 6, "h": 8 },
      "datasource": { "type": "loki", "uid": "LOKI" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=\"scan.candidate_confirmed\" [1h])) / sum(count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=\"scan.candidate_created\" [1h]))",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "max": 1,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 0.5 }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Scan Mode Usage",
      "type": "piechart",
      "gridPos": { "x": 18, "y": 3, "w": 6, "h": 8 },
      "datasource": { "type": "loki", "uid": "LOKI" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (scan_mode) (count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=\"scan.session_started\" [1h]))",
          "legendFormat": "{{scan_mode}}"
        }
      ]
    },
    {
      "id": 5,
      "title": "Session Duration Distribution",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 11, "w": 12, "h": 8 },
      "datasource": { "type": "loki", "uid": "LOKI" },
      "targets": [
        {
          "refId": "A",
          "expr": "quantile_over_time(0.5, {source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=\"scan.session_stopped\" | unwrap duration_ms [5m])",
          "legendFormat": "p50"
        },
        {
          "refId": "B",
          "expr": "quantile_over_time(0.95, {source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=\"scan.session_stopped\" | unwrap duration_ms [5m])",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } }
    },
    {
      "id": 6,
      "title": "Sessions by ID (Drilldown)",
      "type": "logs",
      "gridPos": { "x": 12, "y": 11, "w": 12, "h": 8 },
      "datasource": { "type": "loki", "uid": "LOKI" },
      "targets": [
        {
          "refId": "A",
          "expr": "{source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=\"scan.session_started\""
        }
      ]
    }
  ]
}
