{
  "uid": "scanium-backend-health",
  "title": "Scanium - Backend Health",
  "description": "Backend RED health summary based on backend metrics and logs",
  "tags": [
    "scanium",
    "backend",
    "health"
  ],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "service",
        "label": "Service",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "MIMIR"
        },
        "query": "label_values(scanium_http_requests_total, service_name)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": {
          "text": "All",
          "value": "$__all"
        }
      },
      {
        "name": "env",
        "label": "Environment",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "MIMIR"
        },
        "query": "label_values(scanium_http_requests_total, env)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": {
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Backend RED",
      "type": "row",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 1
      },
      "collapsed": false
    },
    {
      "id": 2,
      "title": "Request Rate (req/s)",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 1,
        "w": 8,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "MIMIR"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(scanium_http_requests_total{service_name=~\"$service\", env=~\"$env\"}[5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "blue",
                "value": null
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "colorMode": "background",
        "graphMode": "area"
      }
    },
    {
      "id": 3,
      "title": "Error Rate (%)",
      "type": "stat",
      "gridPos": {
        "x": 8,
        "y": 1,
        "w": 8,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "MIMIR"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(scanium_http_requests_total{service_name=~\"$service\", env=~\"$env\", status_code=~\"5..\"}[5m])) / sum(rate(scanium_http_requests_total{service_name=~\"$service\", env=~\"$env\"}[5m])) * 100 or vector(0)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "red",
                "value": 5
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "colorMode": "background",
        "graphMode": "area"
      }
    },
    {
      "id": 4,
      "title": "p95 Latency (ms)",
      "type": "stat",
      "gridPos": {
        "x": 16,
        "y": 1,
        "w": 8,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "MIMIR"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le) (rate(scanium_http_request_duration_ms_bucket{service_name=~\"$service\", env=~\"$env\"}[5m])))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 200
              },
              {
                "color": "red",
                "value": 500
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "colorMode": "background",
        "graphMode": "area"
      }
    },
    {
      "id": 5,
      "title": "Requests by Route (Top 5)",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 5,
        "w": 24,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "MIMIR"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(5, sum(rate(scanium_http_requests_total{service_name=~\"$service\", env=~\"$env\"}[5m])) by (route))",
          "legendFormat": "{{route}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2
        }
      }
    },
    {
      "id": 6,
      "title": "4xx vs 5xx (req/s)",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 13,
        "w": 12,
        "h": 7
      },
      "datasource": {
        "type": "prometheus",
        "uid": "MIMIR"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(scanium_http_requests_total{service_name=~\"$service\", env=~\"$env\", status_code=~\"4..\"}[5m]))",
          "legendFormat": "4xx"
        },
        {
          "refId": "B",
          "expr": "sum(rate(scanium_http_requests_total{service_name=~\"$service\", env=~\"$env\", status_code=~\"5..\"}[5m]))",
          "legendFormat": "5xx"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2
        }
      }
    },
    {
      "id": 7,
      "title": "Recent Backend Errors",
      "type": "logs",
      "gridPos": {
        "x": 12,
        "y": 13,
        "w": 12,
        "h": 7
      },
      "datasource": {
        "type": "loki",
        "uid": "LOKI"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{source=\"scanium-backend\", env=~\"$env\", level=~\"ERROR|WARN\"} | json"
        }
      ]
    }
  ]
}
