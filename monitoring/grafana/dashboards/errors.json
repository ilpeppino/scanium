{
  "uid": "scanium-errors",
  "title": "Scanium - Errors & Failures",
  "description": "Detailed error analysis and drilldowns",
  "tags": [
    "scanium",
    "errors",
    "failures"
  ],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "platform",
        "label": "Platform",
        "type": "custom",
        "query": "android,ios",
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "options": [
          {
            "text": "All",
            "value": "$__all",
            "selected": true
          },
          {
            "text": "android",
            "value": "android",
            "selected": false
          },
          {
            "text": "ios",
            "value": "ios",
            "selected": false
          }
        ],
        "includeAll": true,
        "multi": true
      },
      {
        "name": "env",
        "label": "Environment",
        "type": "custom",
        "query": "dev,stage,prod",
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "options": [
          {
            "text": "All",
            "value": "$__all",
            "selected": true
          },
          {
            "text": "dev",
            "value": "dev",
            "selected": false
          },
          {
            "text": "stage",
            "value": "stage",
            "selected": false
          },
          {
            "text": "prod",
            "value": "prod",
            "selected": false
          }
        ],
        "includeAll": true,
        "multi": true
      },
      {
        "name": "app_version",
        "label": "App Version",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "LOKI"
        },
        "query": "label_values({source=\"scanium-mobile\"}, app_version)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": {
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Overall Error Rate",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "loki",
        "uid": "LOKI"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=~\"error.*\" [5m]))",
          "legendFormat": "Errors"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "fixed",
            "fixedColor": "red"
          },
          "custom": {
            "fillOpacity": 20,
            "drawStyle": "line"
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Errors by App Version",
      "type": "barchart",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "loki",
        "uid": "LOKI"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (app_version) (count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\"} | json | event_name=~\"error.*\" [1h]))",
          "legendFormat": "{{app_version}}"
        }
      ]
    },
    {
      "id": 3,
      "title": "Top Error Types (Trend)",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 24,
        "h": 8
      },
      "datasource": {
        "type": "loki",
        "uid": "LOKI"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (event_name) (count_over_time({source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=~\"error.*\" [5m]))",
          "legendFormat": "{{event_name}}"
        }
      ]
    },
    {
      "id": 4,
      "title": "Recent Error Events (Click to Drilldown)",
      "type": "logs",
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 24,
        "h": 12
      },
      "datasource": {
        "type": "loki",
        "uid": "LOKI"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{source=\"scanium-mobile\", platform=~\"$platform\", env=~\"$env\", app_version=~\"$app_version\"} | json | event_name=~\"error.*\""
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true
      }
    }
  ]
}