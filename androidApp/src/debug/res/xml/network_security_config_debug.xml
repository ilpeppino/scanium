<?xml version="1.0" encoding="utf-8"?>
<!--
    Network Security Configuration for DEBUG builds

    Allows cleartext (HTTP) traffic for local development:
    - LAN backend servers (e.g., http://192.168.1.100:3000)
    - Localhost/emulator (http://127.0.0.1, http://10.0.2.2)
    - Any other HTTP endpoints for testing

    WARNING: This config is ONLY used in debug builds. Release builds
    enforce HTTPS-only via network_security_config.xml

    References:
    - https://developer.android.com/privacy-and-security/security-config
    - SEC-008: Network Security Config
-->
<network-security-config>
    <!-- Allow all cleartext traffic in debug builds for development flexibility -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust system certificates (preinstalled CAs) -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
