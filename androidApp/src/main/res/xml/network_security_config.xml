<?xml version="1.0" encoding="utf-8"?>
<!--
    Network Security Configuration for RELEASE builds

    Enforces HTTPS-only communication to prevent MITM attacks.
    Only allows cleartext (HTTP) for localhost/emulator testing.

    For production/beta:
    - All external traffic MUST use HTTPS
    - Backend should be accessed via https://<domain> (e.g., Cloudflare Tunnel)
    - Certificate pinning can be configured via BuildConfig.SCANIUM_API_CERTIFICATE_PIN

    For debug builds: See network_security_config_debug.xml which allows
    cleartext HTTP for LAN backend servers (e.g., http://192.168.1.100:3000)

    References:
    - https://developer.android.com/privacy-and-security/security-config
    - OWASP Mobile Top 10 M5: Insecure Communication
    - SEC-008: Network Security Config
-->
<network-security-config>
    <!-- Block all cleartext traffic by default (enforce HTTPS) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system certificates (preinstalled CAs) -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Exception: Allow localhost cleartext for emulator/local testing -->
    <!-- Safe: only loopback/emulator addresses, not accessible from network -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
</network-security-config>
