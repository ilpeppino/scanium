<?xml version="1.0" encoding="utf-8"?><!--
Splash screen icon for Scanium - Dark Mode variant - Lightning Bolt Design.
Uses the geometric "S" lightning bolt symbol centered for splash display.

Dark mode: White frame with yellow lightning bolt accent on dark slate background.
-->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Center the icon content within the safe zone (66% of 108 = ~71dp centered) -->
    <group
        android:pivotX="0"
        android:pivotY="0"
        android:scaleX="0.66"
        android:scaleY="0.66"
        android:translateX="18"
        android:translateY="18">

        <!-- Background filled rounded square - Dark slate for dark mode -->
        <path
            android:fillColor="#0F172A"
            android:pathData="M 27.5 11 H 80.5 A 16.5 16.5 0 0 1 97 27.5 V 80.5 A 16.5 16.5 0 0 1 80.5 97 H 27.5 A 16.5 16.5 0 0 1 11 80.5 V 27.5 A 16.5 16.5 0 0 1 27.5 11 Z" />

        <!-- White border frame -->
        <path
            android:fillColor="#00000000"
            android:pathData="M 27.5 11 H 80.5 A 16.5 16.5 0 0 1 97 27.5 V 80.5 A 16.5 16.5 0 0 1 80.5 97 H 27.5 A 16.5 16.5 0 0 1 11 80.5 V 27.5 A 16.5 16.5 0 0 1 27.5 11 Z"
            android:strokeWidth="6.5"
            android:strokeColor="#FFFFFF" />

        <!-- Lightning Bolt S Symbol: Three geometric parallelograms -->
        <!-- Top bar -->
        <path
            android:fillColor="#FFD400"
            android:pathData="M 29 27 L 75 27 L 69 37 L 29 37 Z" />
        <!-- Middle diagonal bar -->
        <path
            android:fillColor="#FFD400"
            android:pathData="M 67 37 L 75 27 L 41 73 L 33 63 Z" />
        <!-- Bottom bar -->
        <path
            android:fillColor="#FFD400"
            android:pathData="M 33 63 L 41 73 L 79 73 L 79 63 Z" />

    </group>
</vector>
